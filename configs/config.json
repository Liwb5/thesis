{
    "task_name": "first_train.1219",
    "device": 0,
    "log_level": "debug",
    "seed": 1667,
    "loss": "ce_loss",

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },

    "trainer":{
        "epochs": 100,
        "save_period": 5,
        "print_every": 10,
        "max_norm": 1.0,
        "save_dir": "checkpoints/",
        "log_dir": "logs/",
        "teacher_forcing_ratio": "logs/",
        "output_dir": "outputs/"
    },

    "data_loader":{
        "train_data": "./data/dm_data_from_summaRuNNer/origin_data/train.json",
        "val_data": "./data/dm_data_from_summaRuNNer/origin_data/val.json",
        "test_data": "./data/dm_data_from_summaRuNNer/origin_data/test.json",
        "batch_size": 10,
        "shuffle": true,
        "data_quota": 10000
    },

    "vocabulary": {
        "vocab_file": "./data/dm_data_from_summaRuNNer/origin_data/w2i.json",
        "sent_trunc": 100,
        "doc_trunc": 50,
        "split_token": "\n"
    },

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },

    "model": {
        "type": "ae",
        "args": {
            "embed_dim": 100,
            "vocab_size": 153826,
            "hidden_size": 256,
            "max_len": 120,
            "sos_id": 2,
            "eos_id": 3,
            "rnn_cell": "gru",
            "input_dropout_p": 0.0, 
            "dropout_p": 0.0, 
            "bidirectional": true,
            "use_attention": false,
            "pretrained_embed": "./data/cnn_dailymail_data/finished_dm_data/embed" 
        }
    }
}
