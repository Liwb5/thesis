{
    "task_name": "first_train.1217",
    "device": 0,
    "log_level": "debug",
    "seed": 1667,
    "loss": "ce_loss",

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },

    "trainer":{
        "epochs": 100,
        "save_period": 1,
        "print_every": 10,
        "max_norm": 1.0,
        "save_dir": "checkpoints/",
        "log_dir": "logs/",
        "teacher_forcing_ratio": "logs/",
        "output_dir": "outputs/"
    },

    "data_loader":{
        "type": "PickleReader",
        "args": {
            "data_dir": "./data/cnn_dailymail_data/finished_dm_data/chunked/",
            "vocab_file": "./data/cnn_dailymail_data/finished_dm_data/vocab_file.pickle",
            "batch_size": 10,
            "shuffle": true,
            "train_num": 10000 
        }
    },

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },

    "model": {
        "type": "ae",
        "args": {
            "embed_dim": 100,
            "vocab_size": 200004,
            "hidden_size": 256,
            "max_len": 120,
            "sos_id": 2,
            "eos_id": 3,
            "rnn_cell": "gru",
            "input_dropout_p": 0.0, 
            "dropout_p": 0.0, 
            "bidirectional": true,
            "use_attention": false,
            "pretrained_embed": "./data/cnn_dailymail_data/finished_dm_data/embed" 
        }
    }
}
